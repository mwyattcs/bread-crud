<h1>Orders</h1>

<h2>Browse Orders</h2>

   
<!-- Table of Customers -->
<table id="order-table" border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.order_id}}>
            <td>{{this.order_id}}</td>
            <td>{{this.order_total}}</td>
            <td>{{this.order_date}}</td>
            <td>{{this.bakery_id}}</td>
            <td>{{this.customer_id}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- Add Order -->
<h2>Add an Order</h2>
<p>To add a new order, please enter the information below and click `Submit`!</p>
<form id="add-order-form" method="POST" action="/add-order-form">
    <label for="input-total">Order Total: </label>
    <input type="number" name="input-total" id="input-total-ajax">
    
    <label for="input-date">Date: </label>
    <input type="date" name="input-date" id="input-date-ajax">

    <label for="input-bakery">Bakery ID: </label>
    <input type="number" name="input-bakery" id="input-bakery-ajax">

    <label for="input-customer">Customer ID: </label>
    <input type="number" name="input-customer" id="input-customer-ajax">

    <input type="submit">
</form>
